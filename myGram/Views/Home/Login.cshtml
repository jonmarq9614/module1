<div id="LogInDiv">
    <form action="~/Home/LogUser" method="post">
        <table>
            <tbody>
                <tr>
                    <td>
                        <label>User</label>
                    </td>
                    <td>
                        <input type="text" name="User" placeholder="Type user name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Password</label>
                    </td>
                    <td>
                        <input type="password" name="Password" placeholder="Type user password" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button>Log In</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>